<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.yolanda.myfrescodemo.FrescoListActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:visibility="gone"
        android:id="@+id/sv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="3000"
        fresco:failureImage="@mipmap/faile"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:progressBarAutoRotateInterval="5000"
        fresco:progressBarImage="@mipmap/retry"
        fresco:progressBarImageScaleType="centerCrop"
        fresco:retryImage="@mipmap/retry"
        fresco:retryImageScaleType="centerCrop"
        />

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
